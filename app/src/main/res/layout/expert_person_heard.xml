<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/expert_name_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <RelativeLayout
            android:id="@+id/expert_person_show_big_image"
            android:layout_width="150dp"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/expert_head_table_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/expert_head_table_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/expert_head_table_iv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_shape_two"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp">

            <RelativeLayout
                android:id="@+id/expert_person_show_attr_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/epert_person_attr_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/expert_person_attr_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/epert_person_attr_num_tv"
                    android:layout_marginLeft="5dp"
                    android:text="关注"
                    android:layout_centerVertical="true"
                    android:textSize="13sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/middle_line"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/expert_person_show_attr_num"
                android:layout_marginLeft="10dp"
                android:background="#bdbdbd" />


            <RelativeLayout
                android:id="@+id/expert_person_show_fans_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/middle_line"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/expert_person_fans_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/expert_person_fans_num_tv"
                    android:text="粉丝"
                    android:layout_centerVertical="true"
                    android:textSize="13sp" />
            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/expert_person_line_tv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/expert_name_relative_layout"
        android:background="#f1f1f1" />

    <android.support.design.widget.TabLayout
        android:id="@+id/expert_person_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/expert_person_line_tv"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabSelectedTextColor="@color/colorAccent" />

</RelativeLayout>