<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/retrieve_fragment_two_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="请旋转右侧四张图片，完成拼图"/>


    <TextView
        android:id="@+id/retrieve_fragment_two_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorAccent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="换一个"/>

    <ImageView
        android:id="@+id/retrieve_fragment_two_total_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/retrieve_fragment_two_title"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/retrieve_fragment_two_image_one"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/retrieve_fragment_two_title"
        android:layout_toRightOf="@id/retrieve_fragment_two_total_iv"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/retrieve_fragment_two_image_two"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/retrieve_fragment_two_title"
        android:layout_toRightOf="@id/retrieve_fragment_two_image_one"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/retrieve_fragment_two_image_three"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/retrieve_fragment_two_image_one"
        android:layout_alignLeft="@id/retrieve_fragment_two_image_one"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/retrieve_fragment_two_image_four"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/retrieve_fragment_two_image_two"
        android:layout_alignLeft="@id/retrieve_fragment_two_image_two"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/retrieve_fragment_two_get_user_code"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/retrieve_fragment_two_image_four"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="获取验证码"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:background="@drawable/register_shape"/>

    <EditText
        android:id="@+id/retrieve_fragment_two_user_code"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/retrieve_fragment_two_image_four"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/retrieve_fragment_two_get_user_code"
        android:paddingLeft="10dp"
        android:hint="请输入短信验证码"
        android:background="@drawable/register_shape"/>

    <EditText
        android:id="@+id/retrieve_fragment_two_user_pass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/retrieve_fragment_two_user_code"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:hint="请输入新密码"
        android:background="@drawable/register_shape"/>

    <TextView
        android:id="@+id/retrieve_fragment_two_user_register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/retrieve_fragment_two_user_pass"
        android:layout_marginTop="10dp"
        android:text="注册"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="18sp"
        android:background="@drawable/login_shape_one"/>
</RelativeLayout>