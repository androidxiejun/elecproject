<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.administrator.electronicproject.StoreFragment.SnapActivity.SnapActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize">
    <Button
        android:id="@+id/snap_back_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/back_btn"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/snap_snaping_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="正在热抢"
            android:background="@drawable/purchase_detail_btn_shape"/>
        <Button
            android:id="@+id/snap_start_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="即将开始"
            android:background="@drawable/purchase_detail_btn_shape"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/snap_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabSelectedTextColor="@color/colorAccent"
        app:tabMode="fixed">
        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部"/>
        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="精品服装"/>
        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="箱包饰品"/>
    </android.support.design.widget.TabLayout>
   <FrameLayout
       android:id="@+id/snap_fragment"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>
</LinearLayout>
