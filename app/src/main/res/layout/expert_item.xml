<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="5dp">

    <ImageView
        android:id="@+id/expert_person_item_iv"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/expert_person_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/expert_person_item_iv"
        android:layout_marginBottom="10dp"
        android:layout_alignLeft="@id/expert_person_item_iv"
        android:layout_alignRight="@id/expert_person_item_iv"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="16sp" />

</RelativeLayout>