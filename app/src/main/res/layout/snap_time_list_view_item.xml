<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="120dp">
<ImageView
    android:id="@+id/snap_time_list_view_img"
    android:layout_width="130dp"
    android:layout_height="130dp"
    android:scaleType="fitXY"
    android:src="@drawable/test"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/snap_time_list_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/snap_time_list_view_curreentprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:id="@+id/snap_time_list_view_ooriginprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="10sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/snap_time_list_view_discount"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:background="@color/colorBlack"
                android:textSize="10sp"
                android:focusable="false"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已售"/>
            <TextView
                android:id="@+id/snap_time_list_view_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="件"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@color/colorAccent"
                android:focusable="false"
                android:text="立即抢"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>