<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/register_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/register_back_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/back_button_black" />

            <TextView
                android:id="@+id/register_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#000000"
                android:text="手机号注册"
                android:textSize="20sp" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/register_tool_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/register_tool_bar"
        android:background="#bdbdbd"/>

    <EditText
        android:id="@+id/register_user_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/register_tool_line"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:hint="手机号"
        android:background="@drawable/register_shape"/>

    <TextView
        android:id="@+id/register_get_user_code"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/register_user_phone"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="获取验证码"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:background="@drawable/register_shape"/>

    <EditText
        android:id="@+id/register_user_code"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/register_user_phone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/register_get_user_code"
        android:paddingLeft="10dp"
        android:hint="请输入短信验证码"
        android:background="@drawable/register_shape"/>

    <EditText
        android:id="@+id/register_user_pass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/register_user_code"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:hint="请输入至少6位密码"
        android:background="@drawable/register_shape"/>

    <TextView
        android:id="@+id/register_user_register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/register_user_pass"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="注册"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="18sp"
        android:background="@drawable/login_shape_one"/>

</RelativeLayout>