<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f1f1f1">

    <android.support.v7.widget.Toolbar
    android:id="@+id/user_nick_tool_bar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#FFFFFF"
    app:contentInsetStart="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/user_nick_back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back_button_black" />

        <TextView
            android:id="@+id/user_nick_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="昵称"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/user_nick_ensure_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/user_info_selector" />

    </RelativeLayout>

</android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/user_nick_et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/user_nick_tool_bar"
        android:layout_marginTop="10dp"
        android:background="@drawable/user_nick"
        android:paddingLeft="10dp"
        android:hint="181"/>

</RelativeLayout>