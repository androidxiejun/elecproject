<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/expert_fans_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_centerVertical="true">


        <TextView
            android:id="@+id/expert_fans_arrt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:text="ddddd"/>

        <RelativeLayout
            android:id="@+id/expert_fans_head_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/expert_fans_arrt_tv">

            <RelativeLayout
                android:id="@+id/expert_fans_head_image_two"
                android:layout_width="70dp"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/expert_fans_head_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/expert_user_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:layout_below="@id/expert_fans_head_image"
                    android:background="@drawable/custom_shape_two"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/expert_fans_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/expert_fans_head_image_two"
                android:layout_alignTop="@id/expert_fans_head_image_two"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:singleLine="true"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="hhhhhhhhh"/>

            <TextView
                android:id="@+id/expert_fans_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/expert_fans_head_image_two"
                android:layout_alignBottom="@id/expert_fans_head_image_two"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:singleLine="true"
                android:textSize="13sp"
                android:text="hhhhhhhhh"/>
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"
        android:layout_below="@id/expert_fans_relative_layout"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>


</RelativeLayout>