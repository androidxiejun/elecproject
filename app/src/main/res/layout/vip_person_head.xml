<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/vip_person_head"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/vip_person_head_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/vip_person_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/vip_person_head_image"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="181"/>

        <TextView
            android:id="@+id/vip_person_head_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/vip_person_head_image"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="当前级别"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/vip_person_head_image">

            <TextView
                android:id="@+id/vip_person_rankStr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorAccent"
                android:text="V0"/>

            <ProgressBar
                android:id="@+id/vip_person_progress"
                android:layout_width="70dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:max="500"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_toRightOf="@id/vip_person_rankStr"/>

            <TextView
                android:id="@+id/vip_person_nextRankStr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/vip_person_progress"
                android:text="V0"/>

            <TextView
                android:id="@+id/vip_person_levle_rule"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:textColor="#FFFFFF"
                android:background="@drawable/login_shape_two"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="级别规则"/>
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/vip_person_head_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/vip_person_head"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#bdbdbd"/>

    <TextView
        android:id="@+id/vip_person_head_rankInformation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/vip_person_head_line"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textSize="16sp"
        android:text="ggggggg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/vip_person_head_rankInformation"
        android:background="#f1f1f1">

        <TextView
            android:id="@+id/vip_person_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            android:text="会员折上折"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:background="#bdbdbd"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/vip_person_member"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:background="#bdbdbd"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/vip_person_member"/>

    </RelativeLayout>

</RelativeLayout>