<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.electronicproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 相机调用界面 -->
        <activity android:name=".FashionFragment.view.activity.CameraActivity" android:launchMode="singleTask"/>
        <!--时尚圈上部详情界面 -->
        <activity android:name=".FashionFragment.view.activity.FashionTopDetailsActivity" android:launchMode="standard"/>
        <!-- 标签界面-->
        <activity android:name=".FashionFragment.view.activity.FashionMiddleTableActivity" android:launchMode="singleTask"/>
        <!-- 点击标签，进入的界面-->
        <activity android:name=".FashionFragment.view.activity.FashionTableDetailsActivity" android:launchMode="singleTask"/>

        <activity android:name=".ClassifyFragment.DetaillActivity.ClassifyDetiailActivity" />
        <activity android:name=".SearchActivity.SearchActivity" />
        <activity android:name=".ClassifyFragment.DetailBrandActivity.DetailBrandActivity" />
        <activity android:name=".PurchaseDetails.PurchaseDetails" />
        <activity android:name=".PurchaseDetails.CommonActivity"/>

    </application>

</manifest>